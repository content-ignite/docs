{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Content Ignite Docs",
  "colors": {
    "primary": "#F66F5E",
    "light": "#F66F5E",
    "dark": "#F66F5E"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index"]
          }
        ]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index"]
          }
        ]
      },
      {
        "tab": "API reference",
        "openapi": {
          "source": "openapi.json"
        }
      },
      {
        "tab": "Changelog",
        "pages": ["changelog"]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://www.contentignite.com/",
          "icon": "newspaper"
        },
        {
          "anchor": "Blog",
          "href": "https://www.contentignite.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/assets/logo/ci-logo-light.svg",
    "dark": "/assets/logo/ci-logo-dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://resource.contentignite.com/support"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Fusion Login",
      "href": "https://admin.contentignite.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "linkedin": "https://www.linkedin.com/company/contentignite"
    }
  }
}
